<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnAttack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack" />

        <Button
            android:id="@+id/btnDefend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Defend" />

        <Button
            android:id="@+id/btnHeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Heal" />


        <LinearLayout
            android:id="@+id/llAttackOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <Button
                android:id="@+id/btnSwiftCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swift Cut" />

            <Button
                android:id="@+id/btnForwardSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Forward Slash" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Return" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvGameLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Game log will appear here"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvHeroStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hero Stats"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/heroHpBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        app:layout_constraintBottom_toTopOf="@+id/tvHeroStats"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp" />


    <ImageView
        android:id="@+id/imageViewHero"
        android:layout_width="140dp"
        android:layout_height="85dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/hero"
        app:layout_constraintBottom_toTopOf="@+id/tvHeroStats"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEnemyStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enemy Stats"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp" />

    <ProgressBar
        android:id="@+id/enemyHpBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        app:layout_constraintTop_toBottomOf="@+id/tvEnemyStats"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageViewEnemy"
        android:layout_width="133dp"
        android:layout_height="153dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        android:src="@drawable/dragon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEnemyStats" />

</androidx.constraintlayout.widget.ConstraintLayout>
