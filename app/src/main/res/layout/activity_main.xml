<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- res/layout/activity_main.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Hero Stats -->
        <TextView
            android:id="@+id/tvHeroStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hero Stats"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- Enemy Stats -->
        <TextView
            android:id="@+id/tvEnemyStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enemy Stats"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnAttack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attack" />

        <Button
            android:id="@+id/btnDefend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Defend"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnHeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heal"
            android:layout_marginTop="10dp" />

        <!-- Text area to show result of the action -->
        <TextView
            android:id="@+id/tvGameLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game log will appear here"
            android:layout_marginTop="30dp"
            android:textSize="16sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>